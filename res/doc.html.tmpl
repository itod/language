{% for func in funcs %}
<div>
    <p>
        <table>
            <tr>
                <td><b>Name</b></td>
                <td colspan="2"><b>{{func.name}}()</b></td>
            </tr>
            <tr>
                <td><b>Description</b></td>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td><b>Syntax</b></td>
                <td colspan="2">
                    <code>
                        <i>{{func.returnType}}</i> <b>{{func.name}}</b>
                        ({% for param in func.params %}{{param.name}}{% if param.optional %}?{% /if %}{% if not currentLoop.isLast %}, {% /if %}{% /for %})
                    </code>
                </td>
            </tr>
            <tr>
                <td><b>Parameters</b></td>
                {% for param in func.params %}
                    <td><b><code>{{param.name}}{% if param.optional %}?{% /if %}</code></b></td>
                    <td></td>
                {% /for %}
            </tr>
            <tr>
                <td><b>Returns</b></td>
                <td colspan="2"></td>
            </tr>
            <!-- <tr>
                <td><b>Related</b></td>
                <td></td>
            </tr> -->
        </table>
    </p>
</div>
{% /for %}